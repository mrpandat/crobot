{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "flowtype"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": [
     "error", {
       "allow": [
         "info",
         "warn",
         "error"
       ]
     }
   ]
  }
}
